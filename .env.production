# ============================================
# Production environment variables
# Copy this to .env on your VPS and fill in
# ============================================

DEBUG=False

# IMPORTANT: Generate a real secret key. Run this on your server:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_ME_TO_A_REAL_SECRET_KEY

# Your domain name (must match your DNS record)
DOMAIN=value-ator.org

# Persistent data directory inside the container
DATA_DIR=/app/data

# Predictions CSV filename (stored inside DATA_DIR)
PREDICTIONS_CSV=predictions.csv

# Leave blank to use SQLite (recommended for this project)
# DB_ENGINE=mysql
